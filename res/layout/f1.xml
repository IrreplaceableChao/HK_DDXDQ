<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="测深生成方式"
            android:textColor="#000000"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/zidong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="自动"
                android:textColor="#000000"
                android:textSize="20dp" />
            <RadioButton
                android:id="@+id/shoudong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="手动"
                android:textColor="#000000"
                android:textSize="20dp" />
        </RadioGroup>


    </LinearLayout>
        <View android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#A8A8A8"/>
        
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
           android:orientation="vertical"
           >
<LinearLayout 
    android:id="@+id/linear_gone1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/F1_linearheight"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="钻杆平均长度"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/dangen"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:paddingRight="3dp"
            android:text="9.85" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="米"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="@dimen/F1_linearheight"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="立柱钻杆根数"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/lizhu"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:imeOptions="flagNoExtractUi"
            android:numeric="integer"
            android:paddingRight="3dp"
            android:text="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" 
            android:text="根"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
      android:layout_height="@dimen/F1_linearheight"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="平均立柱长度"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lizhuchangdu"
      		android:layout_width="80dp"
            android:layout_height="35dp"
            android:paddingRight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:text=""
             android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" 
            android:text="米"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#A8A8A8"/>
    </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
     android:layout_height="@dimen/F1_linearheight"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="托盘位置深度"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_tuopan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:paddingRight="3dp"
            android:text="1000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="米"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/F1_linearheight"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="下铜接头至减震器"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_jiachang"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:paddingRight="3dp"
            android:text="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="米"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
     
<View android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#A8A8A8"/>
    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="@dimen/F1_linearheight"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="第一测点深度"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/editText_diyi"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:paddingRight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text=""
            android:layout_gravity="center_vertical"
             android:gravity="right|center_vertical"
            android:ems="10"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="米"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
