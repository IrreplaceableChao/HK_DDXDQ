<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

        <include   android:id="@+id/title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/multi_point_measure_a"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center" 
            android:layout_weight="1"
            android:text="多点测量"
            android:textSize="27dp" />

        <Button
            android:id="@+id/receive_data"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="数据接收" android:layout_weight="1"
            android:textSize="27dp" />

        <Button
            android:id="@+id/adapter_equipment"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:gravity="center" android:layout_marginTop="10dp"
            android:text="探管适配" android:layout_weight="1"
            android:textSize="27dp" />
        <Button
            android:id="@+id/query_data"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:gravity="center" android:layout_marginTop="10dp"
            android:text="数据查询" android:layout_weight="1"
            android:textSize="27dp" />


        <Button
            android:id="@+id/help"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:gravity="center" 
            android:layout_marginTop="10dp"
            android:text="软件帮助" 
            android:layout_weight="1"
            android:textSize="27dp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="软件退出"
            android:textSize="27dp" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/relative"
        android:layout_alignLeft="@+id/help"
        android:visibility="gone"
     >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/jingshi" />

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView3"
            android:text="当前配对设备:　"
            
            android:textSize="16dp" />

        <TextView
            android:id="@+id/TextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TextView6"
            android:text=""
            android:textColor="#0000FF"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/main_logo"
            />
    </RelativeLayout>


</LinearLayout>
