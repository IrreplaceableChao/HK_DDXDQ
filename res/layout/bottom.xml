<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottomheight"
    android:background="#ffffff"
        	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentRight="true"
     android:orientation="horizontal" >

        <TextView
            android:id="@+id/website"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:background="@drawable/bottombackground"
            android:gravity="center"
            android:text="网址：www.hekang.com"
            android:textColor="#000000"
            android:textSize="@dimen/bottomtextsize" />

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.86"
            android:background="@drawable/bottombackground"
            android:gravity="center"
            android:text="电话：400-6677-543"
            android:textColor="#000000"
            android:textSize="@dimen/bottomtextsize" />

        <TextView
            android:id="@+id/version"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@drawable/bottombackground"
            android:gravity="center"
            android:text="版本号：V1.0"
            android:textColor="#000000"
            android:textSize="@dimen/bottomtextsize" />

        <TextView
            android:id="@+id/banquan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:background="@drawable/bottombackground"
            android:gravity="center"
            android:text="版权所有：北京合康科技发展有限责任公司"
            android:textColor="#000000"
            android:textSize="@dimen/bottomtextsize" />


        <TextView
            android:id="@+id/date"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.62"
            android:background="@drawable/bottombackground"
            android:gravity="center"
            android:text="2014/3/18"
            android:textColor="#000000" 
            android:textSize="@dimen/bottomtextsize"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.51"
            android:background="@drawable/bottombackground"
            android:gravity="center"
            android:text="9:33"
            android:textColor="#000000" 
            android:textSize="@dimen/bottomtextsize"/>



</LinearLayout>