<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="队　　号"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/duihao"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/barbackground"
            android:text="1"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPhonetic"
            android:paddingLeft="2dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="区　　号"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/quhao"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/barbackground"
            android:text="1"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPhonetic"
            android:paddingLeft="2dp"
            android:textSize="20dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/righttishi"
            android:gravity="left"
            android:text="5个汉字或10个数字"
            android:textColor="#c0c0c0"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="井　　号"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/jinghao"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:text="1"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPhonetic"
            android:paddingLeft="2dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/righttishi"
            android:gravity="left"
            android:text="5个汉字或10个数字"
            android:textColor="#c0c0c0"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="延时时间"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/yanshi"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:text="2"
            android:imeOptions="flagNoExtractUi"
            android:numeric="integer"
            android:paddingLeft="2dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="分钟"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/righttishi"
            android:gravity="left"
            android:text="2~299"
            android:textColor="#c0c0c0"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="间隔时间"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/jiange"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/barbackground"
            android:ems="10"
            android:text="6"
            android:imeOptions="flagNoExtractUi"
            android:numeric="integer"
            android:paddingLeft="2dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="秒"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/righttishi"
            android:gravity="left"
            android:text="6~3600"
            android:textColor="#c0c0c0"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text11111111111"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/queding"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="确定"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="返回主页"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>