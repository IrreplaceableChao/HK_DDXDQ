<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/imagess"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:background="@drawable/inputtime" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imagess"
                android:text="请 输 入 测 量 时 间 ， 格 式 如 下:    时:分:秒,如: 00:07:05" 
                android:textSize="25sp"
                android:textColor="#2E2E2E"/>

            <EditText
                android:id="@+id/inputtexttime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/message"
                android:layout_marginRight="33dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/inputtimebackground"
                android:gravity="center"
                android:textColor="#2E2E2E"
                android:inputType="number"
                android:textSize="25sp" />

        </RelativeLayout>
